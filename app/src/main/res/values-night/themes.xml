<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.YetAnotherToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="support_separator">@color/support_separator_dark</item>
        <item name="support_overlay">@color/support_overlay_dark</item>

        <item name="label_primary">@color/label_primary_dark</item>
        <item name="label_secondary">@color/label_secondary_dark</item>
        <item name="label_tertiary">@color/label_tertiary_dark</item>
        <item name="label_disable">@color/label_disable_dark</item>

        <item name="color_red">@color/color_red_light</item>
        <item name="color_green">@color/color_green_light</item>
        <item name="color_blue">@color/color_blue_light</item>
        <item name="color_gray">@color/color_gray_light</item>
        <item name="color_gray_light">@color/color_gray_light_dark</item>
        <item name="color_white">@color/color_white_light</item>

        <item name="back_primary">@color/back_primary_dark</item>
        <item name="back_secondary">@color/back_secondary_dark</item>
        <item name="back_elevated">@color/back_elevated_dark</item>

        <item name="calendar_color">@color/color_blue_light</item>

        <item name="android:statusBarColor">?attr/back_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
    </style>
</resources>